{
  "name": "markdown-tiptap-editor",
  "displayName": "Markdown Tiptap Editor",
  "description": "View and edit Markdown files in a beautiful Notion-like Tiptap editor with AI assistance",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "license": "MIT",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdownTiptap.editor",
        "displayName": "Tiptap Markdown Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          },
          {
            "filenamePattern": "*.mdx"
          }
        ],
        "priority": "option"
      }
    ],
    "configuration": {
      "title": "Tiptap Markdown Editor",
      "properties": {
        "markdownTiptap.aiAppId": {
          "type": "string",
          "default": "",
          "description": "Tiptap Cloud AI App ID (from https://cloud.tiptap.dev)"
        },
        "markdownTiptap.aiToken": {
          "type": "string",
          "default": "",
          "description": "Tiptap Cloud AI JWT Token"
        },
        "markdownTiptap.autoSaveDelay": {
          "type": "number",
          "default": 300,
          "minimum": 100,
          "maximum": 5000,
          "description": "Debounce delay in milliseconds before syncing edits to the file"
        }
      }
    }
  },
  "scripts": {
    "build": "node esbuild.mjs",
    "watch": "node esbuild.mjs --watch",
    "package": "vsce package"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.17",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@tiptap-pro/extension-ai": "^3.4.1",
    "@tiptap-pro/provider": "^3.4.1",
    "@tiptap/core": "^3.19.0",
    "@tiptap/extension-collaboration": "^3.19.0",
    "@tiptap/extension-collaboration-caret": "^3.19.0",
    "@tiptap/extension-color": "^3.19.0",
    "@tiptap/extension-drag-handle-react": "^3.19.0",
    "@tiptap/extension-emoji": "^3.19.0",
    "@tiptap/extension-highlight": "^3.19.0",
    "@tiptap/extension-horizontal-rule": "^3.19.0",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-list": "^3.19.0",
    "@tiptap/extension-mathematics": "^3.19.0",
    "@tiptap/extension-mention": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-subscript": "^3.19.0",
    "@tiptap/extension-superscript": "^3.19.0",
    "@tiptap/extension-table": "^3.19.0",
    "@tiptap/extension-table-of-contents": "^3.19.0",
    "@tiptap/extension-task-item": "^3.19.0",
    "@tiptap/extension-task-list": "^3.19.0",
    "@tiptap/extension-text-align": "^3.19.0",
    "@tiptap/extension-text-style": "^3.19.0",
    "@tiptap/extension-typography": "^3.19.0",
    "@tiptap/extension-unique-id": "^3.19.0",
    "@tiptap/extensions": "^3.19.0",
    "@tiptap/markdown": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/react": "^3.19.0",
    "@tiptap/suggestion": "^3.19.0",
    "is-hotkey": "^0.2.0",
    "lodash.throttle": "^4.1.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-hotkeys-hook": "^5.2.4",
    "react-textarea-autosize": "^8.5.9",
    "tippy.js": "^6.3.7",
    "yjs": "^13.6.29"
  },
  "devDependencies": {
    "@ariakit/react": "^0.4.21",
    "@tiptap/starter-kit": "^3.19.0",
    "@types/is-hotkey": "^0.1.10",
    "@types/lodash.throttle": "^4.1.9",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.109.0",
    "esbuild": "^0.27.3",
    "esbuild-sass-plugin": "^3.6.0",
    "sass": "^1.97.3",
    "sass-embedded": "^1.97.3",
    "typescript": "^5.9.3"
  }
}
